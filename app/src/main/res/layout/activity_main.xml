<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FEFEFE"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.tklvyou.mediaconvergence.ui.main.MainActivity">


    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>


    <cn.tklvyou.mediaconvergence.widget.BottomNavigationViewEx
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        app:itemIconTint="@color/selector_item_icon_accent_color"
        app:itemTextColor="@color/selector_item_accent_color"
        app:menu="@menu/navigation" />


</LinearLayout>
