<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_165"
        android:layout_height="@dimen/dp_175"
        android:background="@drawable/shape_white_radius_10_bg"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivGoods"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:padding="@dimen/dp_11"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_15"
            android:singleLine="true"
            android:text="0积分"
            android:textColor="@color/default_gray_text_color"
            android:textSize="@dimen/sp_11" />

    </LinearLayout>

</LinearLayout>