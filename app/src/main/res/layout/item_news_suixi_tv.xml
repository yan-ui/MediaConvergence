<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_13"
    android:paddingRight="@dimen/dp_13">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvModuleSecond"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/default_black_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvSuixiTvAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/icon_mini_right"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="全部"
            android:textColor="@color/grayAAAAAA"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/common_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llSuixiTvFirst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_94">

                <ImageView
                    android:id="@+id/ivImageFirst"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/dp_94"
                    android:background="@color/common_bg" />

                <TextView
                    android:id="@+id/tvTimeFirst"
                    android:background="@drawable/shape_gray_radius_3_alpha_75_bg"
                    android:layout_width="@dimen/dp_35"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="bottom|right"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_9" />

                <ImageView
                    android:id="@+id/ivSuiXiTVFirstStartPlayer"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_start_play" />

            </FrameLayout>


            <TextView
                android:id="@+id/tvNameFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/default_black_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSuixiTvSecond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_94">

                <ImageView
                    android:id="@+id/ivImageSecond"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_94"
                    android:background="@color/common_bg" />


                <TextView
                    android:id="@+id/tvTimeSecond"
                    android:background="@drawable/shape_gray_radius_3_alpha_75_bg"
                    android:layout_width="@dimen/dp_35"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="bottom|right"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_9" />

                <ImageView
                    android:id="@+id/ivSuiXiTVSecondStartPlayer"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_start_play" />

            </FrameLayout>


            <TextView
                android:id="@+id/tvNameSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/default_black_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>