<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_214"
    android:layout_height="@dimen/dp_263"
    android:background="@mipmap/custom_confirm_dialog_bg">

    <ImageView
        android:id="@+id/btnNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:src="@mipmap/icon_dialog_close" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_80"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:id="@+id/btnYes"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:background="@drawable/shape_color_accent_radius_15_bg"
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_30"
        android:text="立即兑换"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

</FrameLayout>