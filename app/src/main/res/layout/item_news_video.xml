<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/videoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivVideoBg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_188" />

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:padding="@dimen/dp_13"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/ivStartPlayer"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:src="@mipmap/ic_start_play" />

        <TextView
            android:id="@+id/tvVideoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:padding="@dimen/dp_15"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_9" />

    </FrameLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/default_avatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvCommentNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/icon_msg"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="0"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvGoodNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:drawableLeft="@mipmap/icon_good"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="0"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

</LinearLayout>