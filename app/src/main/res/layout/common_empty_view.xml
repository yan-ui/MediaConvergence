<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llnodata"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color_gray"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_icon_iv"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:contentDescription="@null"
        android:src="@drawable/img_no_content" />

    <TextView
        android:id="@+id/empty_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="暂无内容"
        android:textColor="#666666"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/empty_sub_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:visibility="gone" />


    <TextView
        android:id="@+id/empty_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/comm_titlebar_back_normal"
        android:gravity="center"
        android:minWidth="@dimen/dp_100"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="重新加载"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>