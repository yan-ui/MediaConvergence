<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--头部-->
    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:bottomShadowHeight="0dp"
        titlebar:centerText="登录"
        titlebar:centerTextColor="@color/black"
        titlebar:centerTextSize="@dimen/sp_19"
        titlebar:centerType="textView"
        titlebar:showBottomLine="false"
        titlebar:statusBarMode="dark"
        titlebar:titleBarHeight="@dimen/dp_40" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_55"
            android:layout_marginBottom="@dimen/dp_68"
            android:src="@mipmap/logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/login_input_gray_radius_22_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20">

            <EditText
                android:id="@+id/etAccount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/login_phone"
                android:drawablePadding="@dimen/dp_11"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="@dimen/sp_14" />


            <ImageView
                android:id="@+id/ivRight"
                android:visibility="invisible"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@mipmap/login_yes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/login_input_gray_radius_22_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/login_password"
                android:drawablePadding="@dimen/dp_11"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/default_color_radius_22_bg"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnForget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="忘记密码"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="立即注册"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerInside"
                android:src="@mipmap/login_qq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/btnWxLogin"
                android:scaleType="centerInside"
                android:src="@mipmap/login_wx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:scaleType="centerInside"
                android:src="@mipmap/login_wb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
